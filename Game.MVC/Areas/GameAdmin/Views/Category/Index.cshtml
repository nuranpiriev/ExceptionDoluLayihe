@model HomeVM

<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <p class="card-description">
                        Add class <code>.table-striped</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Created At
                                    </th>
                                    <th>
                                        Updated At
                                    </th>
                                    <th>
                                        Deleted At
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Categories)
                                {
                                    <tr>
                                        <td class="py-1">
                                            <img src="~/assets/images/@item.ImagePath" alt="image" />
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.CreatedAt.ToString("yyyy-MM-dd")
                                        </td>
                                        <td>
                                            @(item.UpdatedAt.HasValue ? item.UpdatedAt.Value.ToString("yyyy-MM-dd") : "-")
                                        </td>
                                        <td>
                                            @(item.DeletedAt.HasValue ? item.DeletedAt.Value.ToString("yyyy-MM-dd") : "-")
                                        </td>
                                        <td>
                                            <form asp-controller="Category" asp-action="Delete" asp-area="GameAdmin" asp-route-id="@item.Id" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->
